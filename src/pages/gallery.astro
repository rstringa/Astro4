---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Hero from "@components/hero.astro";
import data from "../data/gallery-data.json";
import {ROOT} from '../../astro.config.mjs'

---

<Layout title="Gallery">
  <Container>
    <Hero title="Gallery website done well with Astro" />
    <div class="main-gallery">
      <ul class="gallery" id="gallery">
        {
          data.map( function(item) {
            return (
            <li id={`${item.id}`}>
              <a href={`${ROOT}/gallery/${item.id}`}>
                <img
                  transition:name={`gallery-image-${item.id}`}
                  src={`${ROOT}/gallery-images/${item.imageURL}`}
                  alt={item.artist}
                />
                <figcaption transition:name={`gallery-caption-${item.id}`}>
                  {item.artist}
                </figcaption>
              </a>
            </li>
          )}
        )
        }
      </ul>
    </div>
  </Container>
</Layout>
